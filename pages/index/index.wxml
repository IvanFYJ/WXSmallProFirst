<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto" >
    <button bindtap="setTextShow">设置文字显示</button>
    <text class="user-motto">{{motto}}</text>
  </view>
  


<view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">绑定学号</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">亲情号</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">留言</view>
</view>
 
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
    <!-- 我是哈哈 -->
    <swiper-item>
      <view>
      <view class='pwssviewwidth'>学号：</view>
      <view class='pwssviewwidth'><input class="input" name="userName"value="{{stunValue}}" placeholder="请输入学号" bindinput ="userNameInput"/></view>
      </view>
      <view class="viewName" style="background-color:#fbf9fe">
      <button class="passBtn" bindtap="passBtnClick">确定</button>
      </view>
    </swiper-item>
    <!-- 我是呵呵 -->
    <swiper-item>
      <view>我是呵呵</view>
    </swiper-item>
    <!-- 我是嘿嘿 -->
    <swiper-item>
      <view>我是嘿嘿</view>
    </swiper-item>
</swiper>

</view>
